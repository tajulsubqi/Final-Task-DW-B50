    <!-- Add My Project Section -->
    <div style="background-color: #141414;">
      <div class="container-fluid row col-lg-7 pt-3 mx-auto py-">
        <form class="container w-md-75 p-5 rounded" method="post" action="/formMyproject" enctype="multipart/form-data">
          <h3 class="text-center fs-2 fw-bold">ADD MY PROJECT</h3>
          <div class="mb-3 mt-5">
            <label for="input-projectname" class="form-label">Project Name</label>
            <input type="text" class="form-control" id="input-projectname" aria-describedby="emailHelp" name="name" />
          </div>
          <div class="mb-3 d-flex">
            <div class="w-50" style="margin-right: 25px">
              <label for="input-startdate">Start Date</label>
              <input type="date" class="form-control mt-2" id="input-startdate" name="startDate" />
            </div>
            <div class="w-50">
              <label for="input-enddate">End Date</label>
              <input type="date" class="form-control mt-2" id="input-enddate" name="endDate" />
            </div>
          </div>
          <div class="mb-3">
            <label for="input-description">Description</label>
            <textarea class="form-control mt-2" id="input-description" style="height: 200px; resize: none" name="description"></textarea>
          </div>
          <div class="mb-3">
            <div class="row">
              <label class="judul-cekbox mb-3" for="cekbox">Technologies</label>
              <div class="col">

                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" name="react" id="reactJs" value="true" />
                  <label class="form-check-label" for="reactJs">
                    <i class="fa-brands fa-react" style="margin-right: 8px"></i>
                    React JS
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="java" id="Java" value="true" />
                  <label class="form-check-label" for="Java">
                    <i class="fa-brands fa-square-js" style="margin-right: 8px"></i>
                    Java
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" name="nodejs" id="nodeJs" value="true" />
                  <label class="form-check-label" for="nodeJs">
                    <i class="fa-brands fa-node-js" style="margin-right: 8px"></i>
                    Node JS
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="socketio" id="socketIO" value="true" />
                  <label class="form-check-label" for="socketIO">
                    <i class="fa-brands fa-vuejs" style="margin-right: 8px"></i>
                    Socket IO
                  </label>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3 mt-3">
            <div>
              <label for="formFileLg" class="form-label">Upload Image</label>
              <input class="form-control" id="formFileLg" type="file" name="upload-image" />
            </div>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn" style="background-color: orangered; color:#fff">
              Submit
            </button>
          </div>
        </form>
      </div>

