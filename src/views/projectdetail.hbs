<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image" href="/images/nav-icon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Project Detail</title>
  </head>
  <body style="color: #fff; background-color:#141414">

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark container-fluid position-sticky top-0" style="z-index: 999;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img src="images/nav-icon.ico" alt="Logo" style="width: 35px; height: auto" />
        </a>
        <div class="navbar-toggler-center">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-3">
              <a class="nav-link active" aria-current="page" href="index">Home</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link" href="myproject">Add Project</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link" href="testimonial">My Testimonials</a>
            </li>
          </ul>
          <div class="d-flex justify-content-center" role="search">
            <a class="btn bg-black text-white fw-bolder" href="contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar End -->

    <!-- Start project detail -->
    <div>
      <div class="text-center my-5">
        <h2 class="fw-bolder" style="color: orangered;">{{data.name}}</h2>
      </div>
      <div class="d-flex mt-5 mx-5">
        <div>
          <img style="width: 500px" src="../{{data.image}}" alt="" />
        </div>
        <div class="d-flex mx-5" style="flex-direction: column">
          <div>
            <h5>Duration:</h5>
            <span class="d-flex mt-4" style="flex-direction: column; font-size: .7rem;">
              <i class="fa-solid fa-calendar-days">{{data.start_date}} âž– {{data.end_date}}</i>
              <i class="fa-regular fa-clock mt-3">{{data.duration}}</i>
            </span>
          </div>
          <div class="mt-3">
            <h6>
              <i class="fa-solid fa-user"></i>:
              {{data.author}}
            </h6>
          </div>
          <div class="mt-5 d-flex" style="flex-direction: column">
            <h5>Technologies:</h5>
            <span class="" style="margin-top: -1.9rem;">
              {{#if data.react}}
                <i class="fa-brands fa-react"> React JS</i>
              {{/if}}
              {{#if data.java}}
                <i class="fa-brands fa-node-js mx-5"> Node JS</i>
              {{/if}}
            </span>
            <span class="mt-5">
              {{#if data.node_js}}
                <i class="fa-brands fa-js" style="margin-right: 30px; margin-left: 4px"> Java</i>
              {{/if}}
              {{#if data.socket_io}}
                <i class="fa-brands fa-ioxhost mx-5"> Socket IO</i>
              {{/if}}
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="mx-5 my-5">
      <p style="text-align: justify"><h6 class="text-secondary fw-bolder">Desc:</h6> {{data.description}}</p>
    </div>
    <!-- End project detail -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>