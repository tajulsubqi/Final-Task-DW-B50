<html lang="en">
  <head>
    <link rel="icon" type="image" href="/images/nav-icon.ico" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="css/style.css" />
    <title>My Profile | Portfolio</title>
  </head>
  <body style="color: #fff; background-color:#000">
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark container-fluid position-sticky top-0" style="z-index: 999;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img src="images/nav-icon.ico" alt="Logo" style="width: 30px;" />
        </a>
        <div class="navbar-toggler-center">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-3">
              <a class="nav-link active text-danger fw-bolder" aria-current="page" href="index">Home</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link fw-bold" href="myproject">Add Project</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link fw-bold" href="testimonial">My Testimonials</a>
            </li>
          </ul>
          {{#if isLogin}}
            <div class="d-flex fw-bolder mx-5" role="search">
              <a class="nav-link text-danger" href="#">Helo, {{user}}</a>
            </div>
            <div class="d-flex fw-bolder mx-5" role="search">
              <a class="nav-link bg-danger p-1 rounded text-white" href="/logout">Logout</a>
            </div>
          {{else}}
            <div>
              <a class="text-danger fw-bolder" href="register" style="text-decoration: none;">Register</a>
            </div>
            <div>
              <a class="text-white fw-bolder mx-5 bg-success px-3 py-1 text-white p-1 rounded d-flex" href="login" style="text-decoration: none;">Login</a>
            </div>
          {{/if}}
          <div class="d-flex collapse justify-content-center fw-bolder" role="search">
            <a class="btn bg-black text-white" href="contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar end -->

    {{#if messages.succes}}
      <div class="alert alert-success" role="alert" id="succes-alert">
        <div class="container text-center">
          {{messages.succes}}
        </div>
      </div>
    {{/if}}
    {{#unless isLogin}}
      <div class="alert alert-danger" role="alert" id="error-alert">
        <div class="container text-center">
          Silahkan Login Terlebih Dahulu
        </div>
      </div>
    {{/unless}}

    <!-- ~ Profile ~ -->
    <section class="content">
      <div class="container py-5">
        <div class="row p-5 rounded">
          <div class="col-lg-9 order-lg-0">
            <!-- Kolom utama pada tampilan desktop -->
            <div class="rounded p-4">
              <h1 class="mb-3 fw-bold">Hi. I'm <span class="name">Tajul Subqi</span>,<span class="new-line">Fullstack Developer</span></h1>
              <p style="text-align: justify">
                Hello, my name is Tajul Subqi, I am 23 years old and come from Aceh. Currently, I am taking part in a bootcamp training program at DumbWays to improve my skills and get a promising career in the professional world. Aut!
              </p>
              <p class="mb-5" style="text-align: justify">Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem, officia inventore, aliquid saepe laborum quia eum nemo porro voluptatibus consequuntur veritatis optio debitis
                consectetur possimus dolor maiores, harum minima omnis?</p>
              <div class="d-flex mt-2 mb-5">
                <button class="rounded" style="color: #fff;  background-color: orangered">Contact</button>
                <h6 class="ms-3">Download CV</h6>
              </div>
              <div class="socials col-lg-2 order-lg-1 d-flex justify-content-center" style="font-size: 1.5rem; font-weight: bold;">
                <a href="http://www.instagram.com/tajulsubqi__"><i class="fab fa-instagram fw-bolder me-3"></i></a>
                <a href="http://www.linkedin.com/in/tajulsubqi"><i class="fab fa-linkedin fw-bolder me-3"></i></a>
                <a href="http://github.com/tajulsubqi"><i class="fab fa-github fw-bolder me-3"></i></a>
                <a href=""><i class="fab fa-discord fw-bolder me-3"></i></a>
              </div>
            </div>
          </div>
          <!-- Profile Image -->
          <div class="col-lg-3 order-lg-1 d-flex justify-content-center flex-column">
            <div class="rounded text-center">
              <img src="images/imageshome.jpg" class="d-flex justify-content-center img-thumbnail rounded-circle" alt="Profile Image" class="rounded-top" style="object-fit: cover; aspect-ratio: 4/4; " />
            </div>
            <div class="text-center my-3">
              <h5>Tajul Subqi</h5>
              <p>Fullstack Developer</p>
            </div>
          </div>
          <!-- Profile Image End -->
        </div>
      </div>
      <div style="margin-top: -7.7rem;">

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path
            fill="#000"
            fill-opacity="1"
            d="M0,32L48,53.3C96,75,192,117,288,144C384,171,480,181,576,170.7C672,160,768,128,864,144C960,160,1056,224,1152,245.3C1248,267,1344,245,1392,234.7L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
          ></path></svg>
      </div>
    </section>
    <!-- ~ Profile End ~ -->

    {{! My Project }}
    <div class="container-fluid w-sm-75 pb-5">
      <div class="mb-5">
        <h3 class="text-center fw-bolder fs-2" style="color: orangered;">MY PROJECT</h3>
      </div>
      {{#if this.isLogin}}
        <div class="cards-my-projects row gap-5 justify-content-center d-flex">
          {{#each dataProject}}
            <div class="card row-md-6" style="width: 370px; height: auto; background-color: #dddddd; box-shadow: 0 0 2px black">
              <div style="width: 100%; height: auto">
                <div style="width: 100%;">
                  <img src="{{this.image}}" class="card-img-top" alt="my-project" style="object-fit: cover; width: 100%; height: 250px" />
                </div>

                <div class="card-body">
                  <div><i class="fa-solid fa-user"></i> : {{this.author}}</div>
                  <a href="/projectDetail/{{this.id}}" class="title">
                    <h3>{{this.name}}</h3>
                  </a>
                  <div class="d-flex justify-content-around">

                    <h6 style="font-size: .6rem;">{{this.start_date}} âž– {{this.end_date}}</h6>
                    <h6 style="font-size: .6rem;">Durasi: {{this.duration}}</h6>
                  </div>
                  <h6 class="card-text mt-2">{{this.description}}</h6>
                  <div class="project-icon">
                    {{#if this.react}}
                      <i class="fa-brands fa-react" style="margin-right: 8px"></i>
                    {{/if}}
                    {{#if this.java}}
                      <i class="fa-brands fa-square-js" style="margin-right: 8px"></i>
                    {{/if}}
                    {{#if this.node_js}}
                      <i class="fa-brands fa-node-js" style="margin-right: 8px"></i>
                    {{/if}}
                    {{#if this.socket_io}}
                      <i class="fa-brands fa-vuejs" style="margin-right: 8px"></i>
                    {{/if}}
                  </div>

                  {{#if this.isLogin}}
                    <div class="d-flex mt-2">
                      <a href="/editProeject/{{this.id}}" class="edit w-50 rounded text-center" style="border: none; margin-right: 8px; text-decoration:none">
                        edit
                      </a>
                      <a href="/deleteProject/{{this.id}}" class="delete w-50 rounded text-center" style="border: none; text-decoration:none">
                        delete
                      </a>
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    </div>

    <div style="margin-top: -7rem;">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path
          fill="#141414"
          fill-opacity="1"
          d="M0,64L48,74.7C96,85,192,107,288,138.7C384,171,480,213,576,213.3C672,213,768,171,864,170.7C960,171,1056,213,1152,213.3C1248,213,1344,171,1392,149.3L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path></svg>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script>
      // JavaScript untuk menampilkan pesan kesalahan document.addEventListener("DOMContentLoaded", function() { const errorAlert = document.getElementById("error-alert"); if (errorAlert) { errorAlert.style.display = "block";
      setTimeout(function() { errorAlert.style.display = "none"; }, 2000); // 5000 milidetik = 5 detik } });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function() { const successAlert = document.getElementById("success-alert"); if (successAlert) { successAlert.style.display = "block"; setTimeout(function() { successAlert.style.display =
      "none"; }, 2000); // 2000 milidetik = 2 detik } });
    </script>
  </body>
</html>