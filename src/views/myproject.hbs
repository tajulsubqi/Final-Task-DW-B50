<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image" href="/images/nav-icon.ico" />
    <title>My Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="css/myproject/css" />
  </head>
  <body style="background-color: #141414;">

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark container-fluid position-sticky top-0" style="z-index: 999;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img src="images/nav-icon.ico" alt="Logo" style="width: 35px; height: auto" />
        </a>
        <div class="navbar-toggler-center">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-3">
              <a class="nav-link active fw-bold" aria-current="page" href="index">Home</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link fw-bold text-danger" href="myproject">Add Project</a>
            </li>
            <li class="nav-item mx-3">
              <a class="nav-link fw-bold" href="testimonial">My Testimonials</a>
            </li>
          </ul>
          <div class="d-flex collapse justify-content-center" role="search">
            <a class="btn bg-black text-white fw-bolder" href="contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- start project -->
    <section style="background-color: #141414; height: 100vh; position:relative">
      <div class="project-content d-flex justify-content-center pt-5">
        <div>
          <h1 class="text-center fs-2 fw-bold mb-5 fw-bolder" style="color: orangered;">UPLOAD MY PROJECT</h1>

          <div class="d-flex justify-content-end mb-5">
            {{#if isLogin}}
              <a href="formMyproject">
                <button class="btn rounded bg-danger text-white fw-bolder px-2 py-1" style="border: none">
                  Add Project
                </button>
              </a>
            {{/if}}
          </div>

          {{#unless isLogin}}
            <div class="alert alert-danger" role="alert" id="error-alert">
              <div class="container text-center">
                Silahkan Login Terlebih Dahulu
              </div>
            </div>
          {{/unless}}

          <div class="d-flex justify-content-center">
            <button class="w-100 bg-black text-white"><h5 class="d-flex justify-content-start fw-bolder mt-2">UPLOAD YOUR PROJECT
                <i class="fa-solid fa-star text-white"></i>
              </h5><button><i class="fa-solid fa-diagram-project"></i></button></button>
          </div>
        </div>
      </div>
    </section>
    <div style="margin-bottom: -10rem;">

      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path
          fill="#000"
          fill-opacity="1"
          d="M0,128L48,154.7C96,181,192,235,288,256C384,277,480,267,576,229.3C672,192,768,128,864,133.3C960,139,1056,213,1152,229.3C1248,245,1344,203,1392,181.3L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path></svg>
    </div>
    <!-- end project -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script>
      // JavaScript untuk menampilkan pesan kesalahan document.addEventListener("DOMContentLoaded", function() { const errorAlert = document.getElementById("error-alert"); if (errorAlert) { errorAlert.style.display = "block";
      setTimeout(function() { errorAlert.style.display = "none"; }, 2000); // 5000 milidetik = 5 detik } });
    </script>
  </body>
</html>